<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ravendesk.TextEditor"
             Title="TextEditor">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Button1" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource MahoganyButton}" />
                <Setter Property="TextColor" Value="{StaticResource RavenBlack}" />
            </Style>
            <Style x:Key="Button2" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource OakButton}" />
                <Setter Property="TextColor" Value="{StaticResource RavenBlack}" />
            </Style>
            <Style x:Key="StackLayout1" TargetType="StackLayout">
                <Setter Property="BackgroundColor" Value="{StaticResource MahoganyBG}" />
            </Style>
            <Style x:Key="StackLayout2" TargetType="StackLayout">
                <Setter Property="BackgroundColor" Value="{StaticResource OakBG}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="20">

        <!--contains a frame object, contains a horizstacklayout object-->
        <!--how to create fully functional bar w buttons?-->
        
        <!--Menu bar-->
        <Frame BorderColor="{StaticResource QuillGray}"
              Padding="0">

            <StackLayout BackgroundColor="{StaticResource MahoganyBG}" Orientation="Horizontal">
                <Button Text="Save"
                        Clicked="OnSaveClicked"
                        Style="{StaticResource Button1}"
                        />
                <Button Text="File Select"
                        Clicked="OnFileSelectButtonClicked"
                        Style="{StaticResource Button1}"
                        />
            </StackLayout>
        </Frame>
        
        <!--Toolbar-->
        <Frame BorderColor="{StaticResource QuillGray}"
               Padding="0">
            
            <StackLayout BackgroundColor="{StaticResource OakBG}" Orientation="Horizontal">
                <!--Search-->
                <Entry
                     x:Name="Search"
                     Placeholder="Search..."
                    BackgroundColor="{StaticResource BirchPale}"/>
                <Button Text="Font"
                    Style="{StaticResource Button2}"
                />
                <Button Text="Text size"
                    Style="{StaticResource Button2}"
                />
                <Button Text="Bold"
                    Style="{StaticResource Button2}"
                />
                <Button Text="Italics"
                    Style="{StaticResource Button2}"
                />
            </StackLayout>
        </Frame>

        <Editor 
            x:Name="textEditor" 
            Text="" 
            HeightRequest="500" 
            BackgroundColor="#F5F4F0">
            <FlyoutBase.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Copy"/>
                    <MenuFlyoutItem Text="Paste"/>
                    <MenuFlyoutItem Text="OpenCopilot" Clicked="OnCopilotClicked"/>
                </MenuFlyout>
            </FlyoutBase.ContextFlyout>
        </Editor>
    </VerticalStackLayout>

    <!--<Grid>

        <Editor x:Name="textEditor" Text="" HeightRequest="500" />

        <Button Text="Save" VerticalOptions="End" Clicked="OnSaveClicked" />
        <Button Text="File Select" VerticalOptions="End" Clicked="OnFileSelectButtonClicked"/>
    </Grid>-->
    
</ContentPage>