<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ravendesk.MainPage">

    <StackLayout BackgroundColor="WhiteSmoke" Orientation="Vertical">
        <Button Text="File Select" BackgroundColor="{StaticResource Starlight}" TextColor="Black" Clicked="OnFileSelectButtonClicked"/>
        <Button Text="Text Editor" 
                BackgroundColor="{StaticResource Starlight}" 
                TextColor="Black" 
                Clicked="OnTextEditButtonClicked"/>
        <Button Text="Copilot" BackgroundColor="{StaticResource Starlight}" TextColor="Black" Clicked="OnCopilotButtonClicked"/>
    </StackLayout>


</ContentPage>